@model EventAll.ViewModels.ViewVenueViewModel






<div class="container">

    <div class="row" style="margin-bottom:15px;">
        
        <div class="col">
            <h1>@Model.Venue.Name:</h1>
            <table class="table">
                <thead class=" thead-dark">
                    <tr>
                        <th>Capacity</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tr>

                    <td>@Model.Venue.Capacity</td>
                    <td>$@Model.Venue.Price</td>
                </tr>
            </table>


        </div>
        <div class="col">
            <h1>List of Events:</h1>
            <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Name of Event</th>
                   
                    <th>Date</th>
                </tr>
            </thead>
                @foreach (var even in Model.Events)
                {
                    <tr>
                        <td><a asp-controller="Event" asp-action="ViewEvent" asp-route-id="@even.ID">@even.Name</a></td>                        
                        <td>@even.Date</td>
                    </tr>
                }
            </table>
        </div>

    </div>
</div>