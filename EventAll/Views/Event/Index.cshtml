@model List<EventAll.Models.Event>

<h1>List of Events:</h1>

@if (Model.Count != 0)
{
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th>Name of Event</th>
            <th>Venue</th>
            <th>Date</th>
        </tr>
        </thead>
        <tbody class="tbody">
        @foreach (var even in Model)
        {
            <tr>
                <td><a asp-controller="Event" asp-action="ViewEvent" asp-route-id="@even.ID">@even.Name</a></td>
                

                <td><a asp-controller="Venue" asp-action="ViewVenue" asp-route-id="@even.VenueID">@even.Venue.Name</a></td>
                <td>@even.Date</td>
            </tr>
        }
            </tbody>
    </table>

}else
{
        <p>No Events yet!</p>
}

    <p>
        <a asp-controller="Event" asp-action="Add">Add Event </a>|<a asp-controller="Event" asp-action="Remove"> Remove Event</a>
    </p>
