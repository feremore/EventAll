<h1>@ViewBag.title</h1>
<form method="post">

    @foreach (var equipment in ViewBag.equipments)
    {
        <input type="checkbox" name="equipmentIds" id="@equipment.ID" value="@equipment.ID" />
        <label for="@equipment.ID">@equipment.Name</label>
        <br />
    }

    <input type="submit" value="Remove Selected Equipment" />
</form>