@model EventAll.ViewModels.ViewEquipmentViewModel


<div class="container">

    <div class="row" style="margin-bottom:15px;">
        <h1>@Model.Equipment.Name:</h1>
        <div class="col-6">
            <table class="table">
                <tr>
                    <td>Inventory</td>
                    <td>Price Per</td>
                </tr>
                <tr>

                @if (Model.Equipment.Items == null)
                    {
                        Model.Equipment.Items = new List<Item>();
                    }
                    <td>@Model.Equipment.Items.Count()</td>



                    <td>$@Model.Equipment.Price</td>
                </tr>
            </table>
            <form asp-controller="Equipment" asp-action="ViewEquipment" method="post">
                
                <label>Add/Remove Items: </label>
                <input type="hidden" name="EquipmentID" value="@Model.Equipment.ID" />
                <input type="hidden" name="TotalItem" value="@Model.Equipment.Items.Count()"/>
                <input type="number" name="NumItems" />
                <input type="submit" value="Add/Remove Items" />
            </form>
        </div>
        <div class="col-6">
            <h2>List of Events:</h2>
        </div>

    </div>
</div>