<h1>@ViewBag.title</h1>
<form method="post">

    @foreach (var staff in ViewBag.staffs)
    {
        <input type="checkbox" name="staffIds" id="@staff.ID" value="@staff.ID" />
        <label for="@staff.ID">@staff.Name</label>
        <br />
    }

    <input type="submit" value="Remove Selected Staff" />
</form>