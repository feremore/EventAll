@model EventAll.ViewModels.ViewStaffViewModel


<div class="container">

    <div class="row" style="margin-bottom:15px;">
        <h1>@Model.Staff.Name:</h1>
        <div class="col-6">
            <table class="table">
                <tr>
                    <td>Skills</td>
                    <td>Wage</td>
                </tr>
                <tr>

                    <td>

                        @Model.Staff.Skill
                    </td>
                    <td>$@Model.Staff.Wage per/hour</td>
                </tr>
            </table>


        </div>
        
            
        <div class="col-6">
            <h2>List of Events:</h2>
            <table class="table">

                <tr>
                    <th>Name of Event</th>

                    <th>Date</th>
                </tr>

                @foreach (var even in Model.Events)
                {
                    <tr>
                        <td><a asp-controller="Event" asp-action="ViewEvent" asp-route-id="@even.Event.ID">@even.Event.Name</a></td>
                        <td>@even.Event.Date</td>
                    </tr>
                }
            </table>
        </div>
        

    </div>
</div>