@model List<EventAll.Models.Staff>

<h1>List of Staff:</h1>


<table class="table">
    <thead class="thead-dark">
    <tr>
        <th>Name</th>
        <th>Job</th>
        <th>Wage</th>
    </tr>
    </thead>
    @foreach (var staff in Model)
    {
        <tr>
            <td><a asp-controller="Staff" asp-action="ViewStaff" asp-route-id="@staff.ID">@staff.Name</a></td>
            

            <td>@staff.Skill</td>
            <td>$@staff.Wage per/hour</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No Staff yet!</p>
}

<p>
    <a asp-controller="Staff" asp-action="Add">Add Staff </a>|<a asp-controller="Staff" asp-action="Remove"> Remove Staff</a>
</p>
