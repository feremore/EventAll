@model List<EventAll.Models.Venue>

<h1>List of Staff:</h1>


<table class="table">

    <tr>
        <th>Name</th>
        <th>Job</th>
        <th>Wage</th>
    </tr>

    @foreach (var venue in Model)
    {
        <tr>
            <td><a asp-controller="Venue" asp-action="ViewVenue" asp-route-id="@venue.ID">@venue.Name</a></td>
            <td>@venue.Capacity</td>
            <td>$@venue.Price</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No Venues yet!</p>
}

<p>
    <a asp-controller="Staff" asp-action="Add">Add Staff </a>|<a asp-controller="Staff" asp-action="Remove"> Remove Staff</a>
</p>
